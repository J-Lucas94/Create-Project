{{>_msg}}
<div class="table-responsive">
    <table class="table table-responsive">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            {{#each canis}}
            <tr>
                <td>{{this.id}}</td>
                <td>{{this.nome}}</td>
                {{#if canil}}<td>{{canil.nome}}</td>{{/if}}
                <td>
                    <span class="d-none d-md-block">
                        <a href="/canil/editarcanil/{{this.id}}" class="btn btn-outline-primary btn-sm">Editar</a>
                        <a href="/canil/deletarcanil/{{this.id}}"
                            class="btn btn-outline-danger btn-sm apagar_rg">Apagar</a>
                    </span>

                    <div class="d-block d-md-none">
                        <div class="dropdown">
                            <a href="#" class="btn btn-secondary dropdown-toggle" role="button" id="dropdownMenuLink"
                                data-bs-toggle="dropdown" arial-expanded="false">Ações</a>

                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                <li><a class="dropdown-item" href="/canil/editarcanil/{{this.id}}">Editar</a></li>
                                <li><a class="dropdown-item" href="/canil/deletarcanil/{{this.id}}">Apagar</a></li>
                            </ul>
                        </div>
                    </div>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <div class="d-flex m-auto">
        <div class="form-group col-1 m-auto">
            <a href="/canil/canis" class="btn btn-primary ms-1">Cadastrar</a>
        </div>
    </div>
</div>